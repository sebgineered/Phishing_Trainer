# Standard Agent Prompts - Environment Variables

# Jentic API Credentials
JENTIC_AGENT_API_KEY="your-jentic-agent-api-key"

# LLM Provider (choose one)
# OpenAI
OPENAI_API_KEY="your-openai-api-key"

# Anthropic (optional)
# ANTHROPIC_API_KEY="your-anthropic-api-key"

# Google (optional)
# GEMINI_API_KEY="your-gemini-api-key"

# LLM Model Configuration
LLM_MODEL="gpt-4"  # or claude-sonnet-4, gemini-pro

# Additional API Credentials (as needed)

# Email Service (SendGrid)
# SENDGRID_API_KEY="your-sendgrid-api-key"
# SENDER_EMAIL="your-verified-sender-email@example.com"

# Discord
# DISCORD_WEBHOOK_URL="your-discord-webhook-url"

# Application Settings
DEBUG_MODE="False"  # Set to True for development
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL